<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/summer2"
    android:weightSum="1">

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="현재위치사용"
        android:id="@+id/LocationCheck"
        android:checked="false"
        android:layout_marginTop="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="수동 위치설정"
        android:id="@+id/LocationHandle"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/LocationCheck"
        android:layout_alignParentLeft="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="현재시간사용"
        android:id="@+id/TimeCheck"
        android:layout_weight="0.10"
        android:checked="false"
        android:layout_below="@+id/LocationHandle"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="날짜"
        android:id="@+id/datebtn"
        android:layout_weight="0.13"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/TimeCheck"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/completebtn"
        android:layout_toStartOf="@+id/completebtn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="완료"
        android:id="@+id/completebtn"
        android:layout_gravity="right"
        android:layout_weight="0.13"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="시간"
        android:id="@+id/timebtn"
        android:layout_below="@+id/TimeCheck"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/completebtn"
        android:layout_toEndOf="@+id/completebtn" />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="내용 입력"
        android:id="@+id/alert2"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/timebtn"
        android:layout_alignLeft="@+id/timebtn"
        android:layout_alignStart="@+id/timebtn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="제목 입력"
        android:id="@+id/alert1"
        android:layout_alignTop="@+id/alert2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/datebtn"
        android:layout_alignEnd="@+id/datebtn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사진추가"
        android:id="@+id/albumbtn"
        android:layout_above="@+id/completebtn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="54dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사진 없음"
        android:id="@+id/picfileView"
        android:layout_alignTop="@+id/albumbtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/albumbtn"
        android:layout_toLeftOf="@+id/alert2"
        android:layout_toStartOf="@+id/alert2" />

</RelativeLayout>